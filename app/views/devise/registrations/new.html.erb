<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "signup_form"}) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'xlarge' %></div>
  <div><%= f.label "Name" %><br />
    <%= f.text_field :first_name, class: 'xmedium', :placeholder => 'First Name' %>
    <%= f.text_field :last_name, class: 'xmedium', :placeholder => 'Last Name' %>
  </div>
  <div><%= f.label :password %> 
  	<!-- <%# if @validatable %><i>(<%#= @minimum_password_length %> characters minimum)</i><%# end %><br /> -->
  	<br/>
    <%= f.password_field :password, autocomplete: "off", class: 'xlarge' %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'xlarge' %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
