<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "signup_form"} ) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'xlarge' %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", class: 'xlarge' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Log in" %></div>
<% end %>

<%= render "devise/shared/links" %>
