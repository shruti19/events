<div class="page-header">
  <h1 style="font-size: 23px;"> <small style="font-size: 20px;">Watch the latest shows happening near you. </small> Register Now!</h1>
</div>

<%if @events.present? %>
  <% @events.each do |event| %>
		<ul class="list-group" style="margin: 0% 3%;">
		  <li class="list-group-item">
		    <span class="badge"><%= event.users.size %></span>
		    <%= event.name %>
		    <span style="font-weight:bold; margin: 1% 35%;">
		    	<%= event.due_date.strftime("%d %b %y")%>
		    </span>
		  </li>
		</ul>
	<% end %>
<% end %>
