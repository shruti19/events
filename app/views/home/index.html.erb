<div class="page-header">
  <h1 style="font-size: 23px; margin: 1% 3%;"> <small style="font-size: 20px;"> Be there on the latest shows happening. </small> <%= link_to "Register Now!", new_user_registration_path, class: "btn btn-primary btn-lg"%> </h1>
</div>

<%if @events.present? %>
  <% @events.each do |event| %>
		<ul class="list-group" style="margin: 0% 3%;">
		  <li class="list-group-item">
		    <span class="badge"><%= event.users.size %></span>
		    <%= event.name %>
		    <span style="font-weight:bold; margin: 1% 35%;">
		    	<%= event.due_date.strftime("%d %b %y")%>
		    </span>
		  </li>
		</ul>
	<% end %>
